<!DOCTYPE html>
<html lang="en">
	<head>
		<title>Music World</title>
		<%- include ('../partials/import.ejs') %>
	</head>
	<body>
		<!-- header starts here -->
		<%- include ('../partials/header.ejs') %>
		<!-- header end -->
		<div class="main-content">
			<!-- nav start -->
			<%- include ('../partials/nav.ejs') %>
			<!-- nav end -->


			<!-- main content will go here -->
			<div class="container">
                <div class="row">
					<div class="form-group row" class="col-xs-12">
						<form class="c-form-newConnectionPage" action="/login" method="POST">
							<div class="form-group row">
								<label class="col-form-label col-sm-2" for="email">Email</label>
								<div class="col-sm-4"><input id="email" type="text" name="email" class="form-control" placeholder="Email" required/></div>
							</div>

							<div class="form-group row">
								<label class="col-form-label col-sm-2" for="password">Password</label>
								<div class="col-sm-4"><input id="password" type="password" name="password" class="form-control" placeholder="Password" required/></div>
							</div>
                            <!-- button -->
							<div class="form-group row">
								<label class="col-form-label col-sm-2"></label>
								<div class="col-sm-4"><input type="submit" value="Login" class="btn btn-primary"/></div>
							</div>

							<!-- error -->
							<%if(flagToDisplay){ for(var i=0; i < error.length; i++){ %>
								</div class="form-group row">
									<label class="col-form-label col-sm-2"></label>
									<p class="c-error col-sm-4"><b> * <%= error[i].msg %> </b></p>
								</div>
							<% } } %>


							<%if(unmatched){  %>
								</div class="form-group row">
									<label class="col-form-label col-sm-2"></label>
									<p class="c-error col-sm-4"> <b>Invalid email or password, please try again</b></p>
								</div>
							<%  } %>
						</form>
					</div>
				</div>
			</div>
		</div>
		<!-- page data will end here -->
		
		<!-- footer start -->
		<%- include ('../partials/footer.ejs') %>
		<!-- footer end -->
	</body>
</html>